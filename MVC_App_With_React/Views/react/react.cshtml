@using React.Router;
@{
    ViewBag.Title = "React";
    Layout = null;
}
<html>
<head>
    <title>Hello React</title>
</head>
<body>
    <div id="content">
        @Html.ReactRouter("AppComponent", new { }, serverOnly: true, containerId: "content")
    </div>

    @Scripts.Render("~/ReactApp/dist/app.js")  @*The app bundle should be placed here*@
    @Html.ReactInitJavaScript()
</body>
</html>